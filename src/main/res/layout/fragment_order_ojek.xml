<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<RelativeLayout
    android:id="@+id/fragment_order_ojek"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.antargroup.tubanantar.page.OrderOjek"
    android:background="@color/second_grey">

    <TextView
        android:text="From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/baseColor"
        android:id="@+id/map_from"
        android:layout_height="150dp">

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Alamat"
        android:id="@+id/alamat_from"
        android:layout_below="@+id/map_from"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:inputType="textMultiLine"
        android:id="@+id/alamat_ket_lain_from"
        android:background="@color/white"
        android:hint="Keterangan Lain"
        android:padding="10dp"
        android:layout_below="@+id/alamat_from"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTo"
        android:layout_below="@+id/alamat_ket_lain_from"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/textViewTo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/baseColor"
        android:id="@+id/map_to"
        android:layout_height="150dp">
    </RelativeLayout>

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Alamat"
        android:id="@+id/alamat_to"
        android:layout_below="@+id/map_to"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:inputType="textMultiLine"
        android:id="@+id/alamat_ket_lain_to"
        android:background="@color/white"
        android:hint="Keterangan Lain"
        android:padding="10dp"
        android:layout_below="@+id/alamat_to"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_button"
        android:layout_below="@+id/alamat_ket_lain_to"
        android:text="PESAN"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_order" />

</RelativeLayout>
</ScrollView>